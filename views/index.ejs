<!DOCTYPE html>
<html lang="ca">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- SEO Meta Tags (renderitzats al servidor) -->
    <title><%= meta.title %></title>
    <meta name="description" content="<%= meta.description %>">
    <meta property="og:title" content="<%= meta.title %>">
    <meta property="og:description" content="<%= meta.description %>">
    <meta property="og:url" content="<%= meta.url %>">
    <meta property="og:type" content="website">
    
    <!-- Styles -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/projecte.css">
</head>

<body>
    <!-- INTRO NETFLIX -->
    <div id="introduccio">
        <img src="/imatges/logo.png" alt="Logo" class="logo-introduccio">
        <button id="boto-inici"><%= data.nom %></button>
    </div>

    <!-- CAPÇALERA MINIMALISTA -->
    <header id="capcalera">
        <a href="#" class="logo">
            <img src="/imatges/logo.png" alt="Logo LCF">
        </a>
        <div class="hamburguesa">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </header>

    <!-- MENÚ FULLSCREEN (CORTINA) -->
    <div class="menu-superposa">
        <nav>
            <ul>
                <li><a href="#sobreMi" class="enllac-menu">Sobre mi</a></li>
                <li><a href="#habilitats" class="enllac-menu">Habilitats</a></li>
                <li><a href="#projectes" class="enllac-menu">Projectes</a></li>
                <li><a href="#certificats" class="enllac-menu">Certificats</a></li>
                <li><a href="#contacte" class="enllac-menu">Contacte</a></li>
            </ul>
        </nav>
    </div>

    <!-- CONTINGUT PRINCIPAL (renderitzat al servidor amb EJS) -->
    <main>
        <section id="sobreMi">
            <h1><i class="fas fa-user-circle"></i> <%= data.nom %></h1>

            <div class="text-introduccio">
                <p>
                    <i class="fas fa-quote-left icona-cita"></i>
                    <%= data.descripcio %>
                    <i class="fas fa-quote-right icona-cita"></i>
                </p>
            </div>

            <div class="targetes-sobre-mi">
                <% data.targetes.forEach(targeta => { %>
                <div class="targeta-sobre-mi">
                    <div class="icona-targeta">
                        <i class="fas <%= targeta.icona %>"></i>
                    </div>
                    <h3><%= targeta.titol %></h3>
                    <p><%= targeta.descripcio %></p>
                </div>
                <% }); %>
            </div>

            <div class="pila-tecnologica">
                <h3><i class="fas fa-tools"></i> Stack tecnològic</h3>
                <div class="insignies-tecnologiques">
                    <span class="insignia-tecnologica"><i class="fab fa-java"></i> Java</span>
                    <span class="insignia-tecnologica"><i class="fab fa-html5"></i> HTML5</span>
                    <span class="insignia-tecnologica"><i class="fab fa-js"></i> JavaScript</span>
                    <span class="insignia-tecnologica"><i class="fab fa-php"></i> PHP</span>
                    <span class="insignia-tecnologica"><i class="fab fa-laravel"></i> Laravel</span>
                    <span class="insignia-tecnologica"><i class="fab fa-wordpress"></i> WordPress</span>
                    <span class="insignia-tecnologica"><i class="fas fa-database"></i> MySQL</span>
                </div>
            </div>
        </section>

        <section id="habilitats">
            <h2><i class="fas fa-code"></i> Les meves habilitats:</h2>
            <ul>
                <li>
                    <div class="habilitat">
                        <img src="/logo/java.png" alt="Java Logo">
                        <p>Projectes en Java: Exercicis de POO i un gestor de biblioteca.</p>
                    </div>
                </li>
                <li>
                    <div class="habilitat">
                        <img src="/logo/html.png" alt="HTML CSS Logo">
                        <p>Pàgines web amb HTML i CSS, com el portfolio i pràctiques del curs.</p>
                    </div>
                </li>
                <li>
                    <div class="habilitat">
                        <img src="/logo/js.png" alt="JavaScript Logo">
                        <p>Interactivitat en webs i petites aplicacions amb JS.</p>
                    </div>
                </li>
                <li>
                    <div class="habilitat">
                        <img src="/logo/wp.png" alt="WordPress Logo">
                        <p>Pàgines corporatives i botigues online amb WordPress.</p>
                    </div>
                </li>
                <li>
                    <div class="habilitat">
                        <img src="/logo/laravel.png" alt="Laravel Logo">
                        <p>Desenvolupament d'aplicacions web amb Laravel i PHP.</p>
                    </div>
                </li>
            </ul>
        </section>

        <section id="projectes">
            <h2><i class="fas fa-laptop-code"></i> Els meus projectes:</h2>

            <!-- Botons de filtre -->
            <div class="botons-filtre">
                <button class="boto-filtre active" data-filter="all">Projectes</button>
                <button class="boto-filtre" data-filter="web">Laravel</button>
                <button class="boto-filtre" data-filter="java">HTML / Javascript / Java</button>
                <button class="boto-filtre" data-filter="php">PHP</button>
                <button class="boto-filtre" data-filter="wordpress">WordPress</button>
            </div>

            <ul>
                <li class="element-projecte" data-category="wordpress">
                    <a href="https://pizzataurareus.com/" target="_blank">
                        <p>Projecte Pizza Taura</p>
                        <img src="/imatges/pizza-taura.png" alt="Pizza Taura">
                    </a>
                </li>
                <li class="element-projecte" data-category="wordpress">
                    <a href="https://comercialjodis.com/" target="_blank">
                        <p>Projecte Comercial Jodis</p>
                        <img src="/imatges/comercial-jodis.png" alt="Comercial Jodis">
                    </a>
                </li>
                <li class="element-projecte" data-category="php">
                    <a href="https://github.com/leonardocastro05/ProjecteZoo" target="_blank">
                        <p>Projecte Zoo</p>
                        <img src="/imatges/projecte-zoo.png" alt="Projecte Zoo">
                    </a>
                </li>
                <li class="element-projecte" data-category="java">
                    <a href="https://github.com/leonardocastro05/projecteBiblioteca" target="_blank">
                        <p>Projecte Biblioteca</p>
                        <img src="/imatges/projecte-biblioteca.png" alt="Projecte Biblioteca">
                    </a>
                </li>
                <li class="element-projecte" data-category="web">
                    <a href="http://devchall3ng3.duckdns.org/" target="_blank">
                        <p>DevChallenge2</p>
                        <img src="/imatges/devchallenge2.png" alt="DevChallenge2">
                    </a>
                </li>
                <li class="element-projecte" data-category="java">
                    <a href="http://213.199.58.141:43206/" target="_blank">
                        <p>DevChallenge3</p>
                        <img src="/imatges/devchallenge3.png" alt="DevChallenge3">
                    </a>
                </li>
            </ul>
        </section>

        <section id="certificats">
            <h2><i class="fas fa-graduation-cap"></i> Els meus certificats</h2>
            <ul>
                <li><i class="fas fa-certificate"></i> ESO - Institut Domènech i Montaner 2017 - 2021</li>
                <li><i class="fas fa-certificate"></i> BAT - Institut Domènech i Montaner 2021 - 2022 (1r any)</li>
                <li><i class="fas fa-certificate"></i> GM - Maria Rosa Molas 2022 - 2024</li>
                <li><i class="fas fa-award"></i> GS - Institut Baix Camp 2024 - 2026</li>
            </ul>
        </section>

        <section id="contacte">
            <h2><i class="fas fa-envelope"></i> Contacta amb mi</h2>
            <p class="introduccio-contacte"><i class="fas fa-paper-plane"></i> Tens alguna pregunta o vols col·laborar?
                Envia'm un missatge!</p>

            <form action="https://formspree.io/f/mldpwolo" method="POST" class="formulari-contacte">
                <input type="hidden" name="_subject" value="Nou missatge des del portfolio!">
                <input type="hidden" name="_captcha" value="false">
                <input type="hidden" name="_template" value="table">

                <div class="grup-formulari">
                    <label for="nom"><i class="fas fa-user"></i> Nom</label>
                    <input type="text" id="nom" name="name" placeholder="Nom..." required>
                </div>

                <div class="grup-formulari">
                    <label for="correu"><i class="fas fa-envelope"></i> Email</label>
                    <input type="email" id="correu" name="email" placeholder="Email..." required>
                </div>

                <div class="grup-formulari">
                    <label for="assumpte"><i class="fas fa-tag"></i> Assumpte</label>
                    <input type="text" id="assumpte" name="subject" placeholder="Assumpte..." required>
                </div>

                <div class="grup-formulari">
                    <label for="missatge"><i class="fas fa-comment-dots"></i> Missatge</label>
                    <textarea id="missatge" name="message" rows="6" placeholder="Missatge..." required></textarea>
                </div>

                <button type="submit" class="boto-enviar">
                    <i class="fas fa-paper-plane"></i> <span>Enviar missatge</span>
                </button>
            </form>
        </section>
    </main>

    <!-- FOOTER -->
    <footer>
        <p>&copy; <%= data.nom %> - Institut Baix Camp</p>
        <p>Pots contactar-me a través de:</p>
        <p>
            <a href="mailto:leonardo.decastro@insbaixcamp.cat"><i class="fas fa-envelope"></i> Email</a> |
            <a href="https://www.linkedin.com/in/leonardo-de-castro-ferreira/" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a> |
            <a href="https://github.com/leonardocastro05/" target="_blank"><i class="fab fa-github"></i> GitHub</a>
        </p>
    </footer>

    <!-- Dades pre-carregades per hidratació (ISOMORFISME!) -->
    <script id="server-data" type="application/json">
        <%- JSON.stringify(data) %>
    </script>

    <!-- Script client-side per interactivitat -->
    <script src="/js/projecte.js"></script>
</body>
</html>
